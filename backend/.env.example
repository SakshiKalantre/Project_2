# Database (Neon example)
# Use postgresql scheme and require SSL
DATABASE_URL=postgresql://user:password@your-neon-host/dbname?sslmode=require

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Application
PROJECT_NAME=PrepSphere
# Include your Vercel domain
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://project-2-sbst.vercel.app"]

# File Storage
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Cloudinary (preferred for production file storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_FOLDER=prepsphere

# JWT
SECRET_KEY=your-secret-key-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
# Cloudflare R2 (optional, not used when Cloudinary is configured)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_BUCKET_NAME=prepsphere-uploads
